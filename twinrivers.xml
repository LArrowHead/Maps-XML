<blitz>
	<time>5m</time>
	<lives>2</lives>
	<broadcastLives>true</broadcastLives>
	<title>Blitz</title>
</blitz>
<include src="blitz-global.xml">
<teams>
	<team id="blue-team" color="dark blue" max="10" max-overfill="12">Blue</team>
	<team id="red-team" color="red" max="10" max-overfill="12">Red</team>
</teams>
<kits>
	<kit name="spawn" force="true">
		<item slot="0">stone sword</item>
		<item slot="1">bow</item>
		<item slot="2">golden apple</item>
		<item slot="8" amount"10">arrow</item>
	</kit>	
	   <kit name="blue" parents="spawn">             	  
	    <helmet locked="true" color="334CB2">leather helmet</helmet>
		<chestplate locked="true">iron chestplate</chestplate>
		<leggings locked="true" color="334CB2">leather leggings</leggings>
		<boots locked="true" color="334CB2">leather boots</boots>
	</kit>
	<kit name="red" parents="spawn">
		<helmet locked="true" color="cd0000">leather helmet</helmet>
		<chestplate locked="true">iron chestplate</chestplate>
		<leggings locked="true" color="cd0000">leather leggings</leggings>
		<boots locked="true" color="cd0000">leather boots</boots>
	</kit>	
</kits>
<spawns>
	<spawn team="blue" kit="blue">
		<regions yaw="90">
			<region name="blueSpawn"/>
		</regions>
	</spawn>
	<spawn team="red" kit="red">	
		<regions yaw="90">
			<region name="redSpawn"/>
		</regions>
	</spawn>
	<default>
		<regions yaw="180"/>
			<region name="observerSpawn"/>
		</regions>
	</default>
</spawns>	
<toolrepair>
	<tool>stone sword</tool>
	<tool>bow</tool>
	<tool>leather helmet</tool>
	<tool>iron chestplate</tool>
	<tool>leather leggings</tool>
	<tool>leather boots</tools>
</toolrepair>
<killreward>
	<item amount="1" material="golden apple">
</killreward>
<timelock>on</timelock>
</map>	
